<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF4F4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activites.Info">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:onClick="back"/>


    <TextView
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0288D1"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="About the app:"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Free HD wallpapers for phone and desktop.\n\nConnect to the internet to use the app.\n\nIf the ad is empty while downloading the image, please try again in a few seconds."
        android:textColor="@color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/mansur"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/shapeableImage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Powered by Mansur Pardayev."
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>


        <ImageView
            android:id="@+id/tg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tg"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© Some images are copied from t.me/krivbasshd" />

</LinearLayout>